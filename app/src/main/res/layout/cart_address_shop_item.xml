<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cart"
            type="com.example.tomz.electroniccity.page.details.cart.CartAddressItemViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">
            <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cart.nameReceiver}" />
            <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{cart.addressName}" />
            <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{cart.phoneNumber}"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>